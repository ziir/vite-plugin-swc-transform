{
  "compilerOptions": {
    "outDir": "./dist",

    "pretty": true,
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,

    "composite": true,
    "noEmitOnError": true,    

    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": false,

    "types": ["node"]
  }
}
